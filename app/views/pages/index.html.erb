<p id="notice"><%= notice %></p>

<div class="title">Pages</div>
<div class="action">
<%= link_to 'Site', sites_path(all: true) %>
<%= link_to 'New Page', new_site_page_path %>
<% if params[:all] == 'true' %>
<%= link_to 'Show active pages', site_pages_path(all: false, site_id: params[:site_id]) %>
<% else %>
<%= link_to 'Show all pages', site_pages_path(all: true), site_id: params[:site_id] %>
<% end %>
</div>
  <% @pages.each do |page| %>
<div class="main_content_page">
  <div class="title_page"><%= page.title.capitalize %> </div>
  <div class="name_spec_page">Page stats is active: <%= page.active %></div>
  <div class="name_spec_page">URL: <%= page.url %></div>
  <div class="name_spec_page">Email: <%= page.email %></div>
  <div class="name_spec_page">Basic authentification login: <%= page.basic_auth %></div>
  <div class="name_spec_page">Basic authentification password: <%= page.basic_password %></div>
  <div class="name_spec_page"><%= link_to 'Edit', edit_site_page_path(page.site, page) %>
  <%= link_to 'Destroy', [page.site, page], method: :delete, data: { confirm: 'Are you sure?' } %></div>
</div>
    <% end %>
<br>
